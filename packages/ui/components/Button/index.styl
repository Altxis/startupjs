_primary = $UI.colors.primary
_secondary = $UI.colors.secondary
_success = $UI.colors.success
_white = $UI.colors.white
_disabledOpacity = 0.25
_iconMargin = 1u

.root
  flex-direction row
  align-items center
  justify-content center
  padding 0 1u

  &.m
    height 4.5u
    min-width @height

  &.l
    height 6u
    min-width @height

  &.xl
    height 9u
    min-width @height

  &.with-label
    &.m
      min-width 10u
      &.with-icon
        padding 0 2u

    &.l
      min-width 11u

    &.xl
      min-width 22.5u

    &.l
    &.xl
      padding 0 2u


  &.rounded
    radius()

  &.circle
    radius(circle)

  &.disabled
    opacity _disabledOpacity

.leftIconWrapper
  margin-right _iconMargin
  &.with-label:not(.m)
    margin-left (- _iconMargin)

.rightIconWrapper
  margin-left _iconMargin
  &.with-label:not(.m)
    margin-right (- _iconMargin)

.flat
  .root&
    background-color _primary

    &.secondary
      background-color _secondary

    &.success
      background-color _success

  .label&
    color _white

.outlined
  .root&
    border 1px solid _primary

    &.secondary
      border 1px solid _secondary

    &.success
      border 1px solid _success

.ghost
  .root&
    +web()
      &:hover
        background-color $UI.colors.primaryLightest

    &.secondary
      +web()
        &:hover
          background-color $UI.colors.secondaryLightest

    &.success
      +web()
        &:hover
          background-color $UI.colors.successLightest

.outlined
.ghost
  .label&
    color _primary

    &.secondary
      color _secondary

    &.success
      color _success
