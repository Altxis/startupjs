_borderRadius = 0.5u
_primary = $UI.colors.primary
_secondary = $UI.colors.secondary
_success = $UI.colors.success
_white = $UI.colors.white
_disabled = $UI.colors.darkLighter
_noBackground = rgba(0, 0, 0, 0)
_disabledOpacity = 0.25

.root
  flex-direction row
  align-items center
  justify-content center
  padding 0 1u

  &-m
    height 4.5u
    min-width 10u

  &-l
    height 6u
    min-width 11u

  &-xl
    height 9u
    min-width 22.5u
    padding 0 2u

  &-icon
    min-width 0

    &-m
      height 4.5u
      width @height

    &-l
      height 6u
      width @height

    &-xl
      height 9u
      width @height

  &-rounded
    radius()

  &-circle
    radius(circle)

  &-squared
    border-radius 0

  &-disabled
    opacity _disabledOpacity

.leftIcon
  margin 0

  &-with-label
    margin-right 1u

  &-xl
    margin-right 2u

.rightIcon
  margin 0

  &-with-label
    margin-left 1u

  &-xl
    margin-left 2u


-flat
  .root&
    background-color _primary

    &-secondary
      background-color _secondary

    &-success
      background-color _success

  .label&
    color _white

-outlined
  .root&
    border 1px solid _primary

    &-secondary
      border 1px solid _secondary

    &-success
      border 1px solid _success

  .label&
    color _primary

    &-secondary
      color _secondary

    &-success
      color _success

-ghost
  .root&
    +web()
      &:hover
        background-color $UI.colors.primaryLightest

    &-secondary
      +web()
        &:hover
          background-color $UI.colors.secondaryLightest

    &-success
      +web()
        &:hover
          background-color $UI.colors.successLightest

  .label&
    color _primary

    &-secondary
      color _secondary

    &-success
      color _success

.label
  &-xl
    font-size 3.5u
    line-height @font-size * 1.5
