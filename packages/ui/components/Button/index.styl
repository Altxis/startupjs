_height = 4u
_height-s = 3.5u
_height-xs = 3u
_width = 11u

_largeHeight = 6u

_bigWidth = 27u
_bigHeight = 9u

_borderRadius = 0.5u

_primary = $UI.colors.primary
_white = $UI.colors.white
_disabled = $UI.colors.darkLighter
_noBackground = rgba(0, 0, 0, 0)
_disabledOpacity = 0.25

.root
  flex-direction row
  align-items center
  justify-content center
  radius()

  &-normal
    height 4.5u
    min-width 10u

  &-large
    min-width 11u
    height 6u

  &-big
    padding 0.5u
    min-width _bigWidth
    height _bigHeight


  &-icon
    min-width 0

    &-normal
      height 4.5u
      width @height

    &-large
      height 6u
      width @height

    &-big
      height 9u
      width @height

  &-flat
    background-color _primary

    &-disabled
      opacity _disabledOpacity

  &-outlined
    border 1px solid _primary

    &-disabled
      border 1px solid _disabled

  &-shadowed
    background-color _white

    &-disabled
      background-color _disabled
      opacity _disabledOpacity

  &-ghost
    &-disabled
      opacity _disabledOpacity

  &-squared
    border-radius 0

  &-circle
    radius(circle)

.leftIcon
  padding-left 1u

  &-single
    padding-right 1u


.label
  padding 0 1u

  &-big
    font-size 3.5u
    line-height @font-size * 1.5

  &-flat
    color _white

  &-outlined
    color _primary

    &-disabled
      color _disabled !important

  &-ghost
    color $UI.colors.dark

    &-disabled
      color _disabled

  &-shadowed
    color $UI.colors.dark

.rightIcon
  padding 1u 1u 1u 0
