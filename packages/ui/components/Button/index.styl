_disabledOpacity = 0.25
_iconMargin = 1u

.root
  flex-direction row
  align-items center
  justify-content center

  &.s
    height 3u
    min-width @height

  &.m
    height 4u
    min-width @height

  &.l
    height 5u
    min-width @height

  &.xl
    height 6u
    min-width @height

  &.xxl
    height 9u
    min-width @height

  &.with-label
    padding 0 2u

    &.s
      min-width 8u

    &.m
      min-width 10u

    &.l
      min-width 12u

    &.xl
      min-width 14u

    &.xxl
      min-width 22.5u

  &.rounded
    radius()

  &.circle
    radius(circle)

  &.disabled
    opacity _disabledOpacity

  &.push
    margin-left 2u

.leftIconWrapper
  &.with-label
    margin-right _iconMargin
    margin-left (- _iconMargin)

.rightIconWrapper
  &.with-label
    margin-left _iconMargin
    margin-right (- _iconMargin)
