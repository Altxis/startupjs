_height = 4u
_height-s = 3.5u
_height-xs = 3u
_width = 11u

_largeHeight = 6u

_bigWidth = 27u
_bigHeight = 9u

_borderRadius = 0.5u

_primary = $UI.colors.primary
_white = $UI.colors.white
_disabled = $UI.colors.darkLighter
_noBackground = rgba(0, 0, 0, 0)

.root
  align-items center
  justify-content center
  radius()
  padding 1u

  &-normal
    min-width 10u
    height 4.5u

  &-large
    min-width 11u
    height 6u

  &-big
    padding 2u
    min-width _bigWidth
    height _bigHeight

  &-flat
    background-color _primary

    &-disabled
      background-color rgba(_primary, 0.25)

  &-outlined
    border 1px solid _primary

    &-disabled
      border 1px solid _disabled

  &-squared
    border-radius 0

  &-disabled
    background-color _disabled


.label
  &-big
    font-size 3.5u
    line-height @font-size

  &-flat
    color _white

  &-outlined
    color _primary

    &-disabled
      color _disabled

  &-ghost
    color $UI.colors.dark

    &-disabled
      color _disabled
