_borderRadius = 0.5u
_primary = $UI.colors.primary
_white = $UI.colors.white
_disabled = $UI.colors.darkLighter
_noBackground = rgba(0, 0, 0, 0)
_disabledOpacity = 0.25

.root
  flex-direction row
  align-items center
  justify-content center
  radius()

  &-normal
    height 4.5u
    min-width 10u
    padding-left 1u
    padding-right 1u

  &-large
    height 6u
    min-width 11u
    padding-left 2u
    padding-right 2u

  &-biggest
    height 9u
    min-width 22.5u
    padding 0.5u


  &-icon
    min-width 0

    &-normal
      height 4.5u
      width @height

    &-large
      height 6u
      width @height

    &-biggest
      height 9u
      width @height

  &-squared
    border-radius 0

  &-circle
    radius(circle)


-flat
  .root&
    background-color _primary

    &-disabled
      opacity _disabledOpacity

-outlined
  .root&
    border 1px solid _primary

    &-disabled
      border 1px solid _disabled

-shadowed
  .root&
    background-color _white

    &-disabled
      background-color _disabled
      opacity _disabledOpacity

-ghost
  .root&
    &-disabled
      opacity _disabledOpacity

.label
  &-biggest
    font-size 3.5u
    line-height @font-size * 1.5

  &-flat
    color _white

  &-outlined
    color _primary

    &-disabled
      color _disabled !important

  &-ghost
    color $UI.colors.dark

    &-disabled
      color _disabled

  &-shadowed
    color $UI.colors.dark
