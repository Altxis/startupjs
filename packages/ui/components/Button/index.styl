_primary = $UI.colors.primary
_secondary = $UI.colors.secondary
_success = $UI.colors.success
_white = $UI.colors.white
_disabledOpacity = 0.25
_iconMargin = 1u

.root
  flex-direction row
  align-items center
  justify-content center
  padding 0 2u

  &.s
    height 4u
    min-width @height

  &.m
    height 4.5u
    min-width @height

  &.l
    height 6u
    min-width @height

  &.xl
    height 9u
    min-width @height

  &.with-label
    &.m
      min-width 10u

    &.l
      min-width 11u

    &.xl
      min-width 22.5u

    &.l
    &.xl
      padding 0 2u

  &.rounded
    radius()

  &.circle
    radius(circle)

  &.disabled
    opacity _disabledOpacity

.leftIconWrapper
  margin-right _iconMargin
  &.with-label
    margin-left (- _iconMargin)

.rightIconWrapper
  margin-left _iconMargin
  &.with-label
    margin-right (- _iconMargin)

.outlined
  .root&
    border-width 1px

.ghost
  .root&
    +web()
      &:hover
        background-color $UI.colors.darkLightest
