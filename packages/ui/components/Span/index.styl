_color = $UI.Span.color
_descriptionColor = $UI.Span.descriptionColor

// Add font-family when we add fonts to app

.root
  color _color

  &-m
    font-size 14px
    line-height 20px
  &-s
    font-size 12px
    line-height 16px
  &-xs
    font-size 10px
    line-height 14px
  &-bold
    font-weight 700
  &-italic
    font-style italic
  &-description
    color _descriptionColor

// TODO: Use dark-mode $UI variables
-dark
  .root&
    color white
    &-description
      color rgba(white, 0.5)
