_color = $UI.Span.color
_descriptionColor = $UI.Span.descriptionColor

.root
  color _color

  &-normal
    font-size 14px
    line-height 20px
  &-caption
    font-size 12px
    line-height 16px
  &-small
    font-size 10px
    line-height 14px
  &-bold
    font-weight 700
  &-italic
    font-style italic
  &-description
    color _descriptionColor

// TODO: Use dark-mode $UI variables
-dark
  .root&
    color white
    &-description
      color rgba(white, 0.5)
