$color = $UI.Span.color
$description = $UI.Span.descriptionColor

// Add font-family when we add fonts to app

.root
  color $color
  &.xl
    font-size 20px
    line-height 28px
  &.l
    font-size 16px
    line-height 24px
  &.m
    font-size 14px
    line-height 20px
  &.s
    font-size 12px
    line-height 16px
  &.xs
    font-size 10px
    line-height 14px
  &.bold
    font-weight 700
  &.italic
    font-style italic
  &.description
    color $description

// TODO: Use dark-mode $UI variables
.dark
  &.root
    color white
    &.description
      color rgba(white, 0.5)
