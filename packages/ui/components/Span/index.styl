$color = $UI.Span.color
$descriptionColor = $UI.Span.descriptionColor

.root
  color $color

  &-normal
    font-size 14px
    line-height 20px
  &-caption
    font-size 12px
    line-height 16px
  &-small
    font-size 10px
    line-height 14px
  &-bold
    font-weight 700
  &-description
    color $descriptionColor
