_white = $UI.colors.white

.root
  flex-direction row
  align-items center
  radius()

  &.right
    flex-direction row-reverse

.avatar
  margin-right 1u

  &.right
    margin-right 0
    margin-left 1u

  &.without-label
    margin 0

.userInfo
  flex-grow 1
  flex-shrink 1

.name,
.description
  &.right
    text-align right
