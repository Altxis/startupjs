_borderColor = $UI.colors.primary
_borderSize = 2px
_rightGutter = 1u
_leftGutter = 2u

padding()
  padding-left _leftGutter
  padding-right _rightGutter

.root
  padding()
  height 4u

.border
  position absolute
  background-color _borderColor

  &.top
  &.bottom
    left 0
    right 0
    height _borderSize

  &.top
    top 0

  &.bottom
    bottom 0

  &.left
  &.right
    top 0
    bottom 0
    width _borderSize

  &.left
    left 0

  &.right
    right 0

.icon
  &.left
    margin-right 1u
  &.right
    margin-left 1u

.link
  padding()
  margin-left - _leftGutter
  margin-right - _rightGutter
  text-decoration none
