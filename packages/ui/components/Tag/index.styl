.root
  padding 0.5u
  min-width 2u
  min-height 2u
  justify-content center
  align-items center

  &-circle
    radius(circle)

  &-rounded
    radius()

  &-primary
    background-color $UI.colors.primary

  &-secondary
    background-color $UI.colors.secondary

  &-success
    background-color $UI.colors.success

  &-warning
    background-color $UI.colors.warning

  &-attention
    background-color $UI.colors.attention

.label
  color $UI.colors.white
  font-size 1u
  line-height 1u
  font-weight 600
