_iconMargin = 0.5u

.root
  padding 0 1u
  height 2u
  min-width @height
  justify-content center
  align-items center
  flex-direction row

  &.circle
    radius(circle)

  &.rounded
    radius()

.leftIconWrapper
  &.with-label
    margin-right _iconMargin

.rightIconWrapper
  &.with-label
    margin-left _iconMargin
