.root
  min-width 2.5u
  height 2.5u
  justify-content center
  align-items center
  flex-direction row

  &-circle
    radius(circle)

  &-rounded
    radius()

  &-primary
    background-color $UI.colors.primary

  &-secondary
    background-color $UI.colors.secondary

  &-success
    background-color $UI.colors.success

  &-warning
    background-color $UI.colors.warning

  &-attention
    background-color $UI.colors.attention

  &-dark
    background-color $UI.colors.dark


.leftIcon
  padding-left 1u

  &-single
    padding 0

.label
  padding 0 1u
  color $UI.colors.white

.rightIcon
  padding-right 1u
