_xxl = 8u
_xl = 7u
_l = 6u
_m = 5u
_s = 4u
_xs = 3u

.root
  radius(circle)
  overflow hidden

.avatar
  background-color $UI.colors.primary

.avatar
  justify-content center
  align-items center
  height @width

  &.xxl
    width _xxl
    height @width

  &.xl
    width _xl
    height @width

  &.l
    width _l
    height @width

  &.m
    width _m
    height @width

  &.s
    width _s
    height @width

  &.xs
    width _xs
    height @width


.fallback
  color white
