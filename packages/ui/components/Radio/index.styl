_primary = $UI.colors.primary
_disabled = $UI.colors.darkLighter
_xxl = 6u
_xl = 5u
_l = 4u
_m = 3u
_s = 2u
_xs = 1u

.root
  flex-direction row
  align-items center
  padding 0.5u

.circle
  radius(circle)
  border-width 0.25u
  border-color _primary
  justify-content center
  align-items center

  &.with-label
    margin-right 1u

  &.xxl
    width _xxl
    height @width

  &.xl
    width _xl
    height @width

  &.l
    width _l
    height @width

  &.m
    width _m
    height @width

  &.s
    width _s
    height @width

  &.xs
    width _xs
    height @width

  &.disabled
    border-color _disabled

.checked
  radius(circle)
  background-color _primary

  &.xxl
    width ( _xxl / 2 )
    height @width

  &.xl
    width (_xl / 2)
    height @width

  &.l
    width (_l / 2)
    height @width

  &.m
    width (_m / 2)
    height @width

  &.s
    width (_s / 2)
    height @width

  &.xs
    width (_xs / 2)
    height @width

  &.disabled
    background-color _disabled

.label
  &.disabled
    color _disabled
