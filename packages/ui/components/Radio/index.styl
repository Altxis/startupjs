_primary = $UI.colors.primary
_size = 2u

.root
  flex-direction row
  align-items center
  padding 0.5u

.circle
  radius(circle)
  border-width 0.25u
  border-color _primary
  justify-content center
  align-items center
  width _size
  height _size

  &.with-label
    margin-right 1u

.checked
  width (_size / 2)
  height (_size / 2)
  radius(circle)
  background-color _primary
