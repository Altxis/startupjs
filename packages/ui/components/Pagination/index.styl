_disabledOpacity = 0.25

.root
  flex-direction row
  justify-content center
  max-width 100%

.button
  background-color white
  min-width 4u
  min-height @min-width
  flex-shrink 1
  justify-content center
  align-items center
  padding 0 1u

  &.active
    background-color $UI.colors.primary

  &.disabled
    // important should be here because TouchableOpacity add 'opacity: 1' in to
    // attributes after click.
    opacity $UI.opacity.active !important

.label
  &.active
    color $UI.colors.white

.back, .next
  background-color $UI.colors.darkLightest
