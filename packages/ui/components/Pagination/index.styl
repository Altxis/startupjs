_disabledOpacity = 0.25
_hoverOpacity = 0.5
_activeOpacity = 0.25
_white = $UI.colors.white
_primary = $UI.colors.primary

.root
  flex-direction row
  justify-content center
  max-width 100%

.dots
  justify-content center
  padding 0 0.5u

.button
  min-width 4.5u
  min-height @min-width
  justify-content center
  align-items center
  padding 0 1u

.connected
  .button&
    background-color _white

    &.active
      background-color _primary

    +web()
      &:hover:not(.active)
        background-color $UI.colors.darkLightest

  .label&
    &.active
      color _white

.floating
  .button&
    radius(circle)

    +web()
      &:hover
        // using important to prevent TouchableOpacity default behavior
        opacity _hoverOpacity !important

      &:active
        opacity _activeOpacity !important

  .label&
    &.active
      color _primary
