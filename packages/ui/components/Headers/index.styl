_color = $UI.Headers.color

// Add font-family when we add fonts to app

.root
  color _color

  &.h1
    font-size 9u
    line-height 12u
  &.h2
    font-size 6u
    line-height 8u
  &.h3
    font-size 4.5u
    line-height 6u
  &.h4
    font-size 3u
    line-height 4u
  &.h5
    font-size 2.5u
    line-height 3.5u
  &.h6
    font-size 2u
    line-height 3u
  &.bold
    font-weight 700
