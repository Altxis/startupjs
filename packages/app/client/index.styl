_green = #4caf50
_lightGreen = #c8e6c9

.wait
  font-weight 400
  font-size 24px
  letter-spacing 0.6

.progress
  overflow hidden

.bar
  height 4px
  background-color _lightGreen

.percent
  text-align right
  font-size 12px
  font-weight 700
  color _green

.filler
  position absolute
  top 0
  left 0
  bottom 0
  background-color _green
