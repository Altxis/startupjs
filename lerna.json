{
  "version": "0.9.12",
  "packages": [
    ".",
    "packages/*",
    "packages/styleguide/ui"
  ],
  "command": {
    "bootstrap": {
      "ignore": ["styleguide"]
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "test/**"
      ]
    }
  },
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ]
}
